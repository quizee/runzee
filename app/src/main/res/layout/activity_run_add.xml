<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".RunAddActivity"
    android:focusable="true"
    android:focusableInTouchMode="true">

    <TextView
        android:id="@+id/run_add_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:gravity="center"
        android:text="러닝 추가"
        android:textSize="20sp" />

    <LinearLayout
        android:id="@+id/name_layout_a"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="0.5"
        android:background="@drawable/border"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/name_text_a"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="제목" />

        <EditText
            android:id="@+id/name_edit_a"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:ems="10"
            android:hint="러닝 제목을 지어주세요."
            android:inputType="textPersonName" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/date_layout_a"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="0.5"
        android:orientation="horizontal"
        android:background="@drawable/border">

        <TextView
            android:id="@+id/date_text_a"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="날짜" />

        <EditText
            android:id="@+id/date_edit_a"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:ems="10"
            android:hint="러닝한 날짜는?"
            android:inputType="text" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/time_layout_a"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="0.5"
        android:orientation="horizontal"
        android:background="@drawable/border">

        <TextView
            android:id="@+id/distance_text_a"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="거리" />

        <EditText
            android:id="@+id/distance_edit_a"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:ems="10"
            android:hint="러닝 거리는?"
            android:inputType="text" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/distance_layout_a"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="0dp"
        android:layout_weight="0.5"
        android:background="@drawable/border"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/time_text_a"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="운동 시간" />

        <EditText
            android:id="@+id/time_edit_a"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:ems="10"
            android:hint="러닝한 시간을 기록해보세요."
            android:inputType="number" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/pace_layout_a"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dp"
        android:layout_weight="0.5"
        android:background="@drawable/border"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/pace_text_a"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="페이스" />

        <EditText
            android:id="@+id/pace_edit_a"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:ems="10"
            android:focusableInTouchMode="false"
            android:inputType="number" />

    </LinearLayout>

    <Button
        android:id="@+id/save"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center|top"
        android:layout_marginBottom="50dp"
        android:layout_weight="0.5"
        android:enabled="false"
        android:text="러닝 저장"
        android:textSize="20sp" />

</LinearLayout>